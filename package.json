{
  "name": "pull-request-auto-assign-action",
  "version": "1.0.0-SNAPSHOT",
  "description": "Github action to auto-assigns Pull Requests based on configurations",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcel-ribeiro/pull-request-auto-assign-action.git"
  },
  "main": "src/main.js",
  "scripts": {
    "build": "tsc",
    "pack": "ncc build --minify --no-cache ",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "all": "npm run build && npm run format && npm run pack"
  },
  "author": "Marcel Ribeiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcel-ribeiro/pull-request-auto-assign-action/issues"
  },
  "homepage": "https://github.com/marcel-ribeiro/pull-request-auto-assign-action#readme",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.8",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run format && git add ."
    }
  }
}
